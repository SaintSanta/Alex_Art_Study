<body>

  <script>
    let year = prompt("Enter the year to find out if it is a leap year!");
    let leap;
        if (leap = year % 4 == 0 && year % 100 != 0 || year % 400 == 0) {
        alert("Leap year!");
    } else {
        alert("Not leap year!");
    }
  </script>
   
