<body>

  <script>

let n = Number(prompt("write number N from -100...100", ))

function firstNumbersSum(n) {
  if (0 <= n && n <= 100) { //не понимаю, почему не даёт задать промежуток для n "0 < n <= 100" и для второго условия аналогичное
  return n * (n + 1) / 2; 
} else if (n < 0 && n >= -100) {
  return n * (-n + 1) / 2;
} else {
  alert("Number greater than 100 or less than -100");
} 
}
alert(firstNumbersSum(n));

  </script>
</body>
